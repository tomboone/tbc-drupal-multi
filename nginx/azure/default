server {
    listen 8080;
    listen [::]:8080;
    root /home/site/wwwroot/web;
    index index.php index.html index.htm;
    server_name _; # Listen to all hostnames sent by the App Service frontend
    port_in_redirect off;

    location / {
        # This is the important part for clean URLs
        try_files $uri /index.php?$query_string;
    }

    # Deny access to sensitive files for security.
    location ~* \.(engine|inc|install|make|module|profile|test|po|sh|.*sql|theme|twig|tpl(\.php)?|xtmpl|yml)(~|\.sw[op]|\.bak|\.orig|\.save)?$|/(\.(?!well-known)|composer\.(json|lock)|web\.config|package\.json|package-lock\.json)$|/sites/.*/(private|files/translations)/|/sites/simpletest/|/core/tests/|/vendor/ {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Handle PHP files
    location ~ \.php$ {
        fastcgi_split_path_info ^(.+?\.php)(|/.*)$;
        fastcgi_pass 127.0.0.1:9000; # Correct for Azure App Service PHP images
        include fastcgi_params;
        fastcgi_param HTTP_PROXY "";
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        fastcgi_param QUERY_STRING $query_string;
        fastcgi_intercept_errors on;
        fastcgi_connect_timeout 300;
        fastcgi_send_timeout 3600;
        fastcgi_read_timeout 3600;
        fastcgi_buffer_size 128k;
        fastcgi_buffers 4 256k;
        fastcgi_busy_buffers_size 256k;
        fastcgi_temp_file_write_size 256k;
    }

    # Disable .git directory
    location ~ /\.git {
        deny all;
        access_log off;
        log_not_found off;
    }
}
